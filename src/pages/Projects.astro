---
import Layout from '@/layouts/Layout.astro';
import Hero from '@/components/Hero.astro';
import Button from '@/components/ui/Button.astro';

const secondaryButton = {
    text: "Explora nuestros planes",
    href: "#services"
}

const primaryButton = {
    text: "Habla con nosotros",
    href: "#contact"
}
---

<Layout>
    <Hero 
        title="Descubre cómo nuestras soluciones han transformado negocios como el tuyo"
        description="Descubre cómo hemos impulsado negocios con soluciones innovadoras y creativas"
        primaryButton={primaryButton}
        secondaryButton={secondaryButton}
        showButtons={true}
        showLogo={false}
        colSpan={'full'}
        justifyContent="center"
        class="text-center"
    />
</Layout>