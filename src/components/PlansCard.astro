---
import Button from "@/components/ui/Button.astro";
import { Particles } from "./shadcn/Particles";
import SplitTitle from "./SplitTitle.astro";

const plans = [
    {
        name: "Starter",
        description: "Perfect for getting started with online presence. Basic website and responsive design.",
      
    },
    {
        name: "Growth",
        description: "For growing businesses. Dynamic website, SEO optimization and professional branding.",
  
    },
    {
        name: "Ultimate",
        description: "Advanced and customized development, with premium SEO strategies and extended support.",
    
    }
    
]

---

<section class="container mx-auto px-4 py-20">
    <div class="text-center mb-16">
        <SplitTitle
        title={{
            main: "Web solutions ",
            highlighted: "for you"
        }}
        highlightedClassName="text-primary-cyan"
        />
        <p class="text-lg md:text-xl text-gray-200 max-w-3xl mx-auto mb-12">From basic websites to advanced platforms, we offer packages that adapt to your needs:</p>
    </div>
    <div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {plans.map((plan) => (
            <div class="relative">
               <div class="bg-gradient-to-br from-secondary-blue/10 to-primary-yellow/30 border border-primary-yellow/50 opacity-90 hover:opacity-100 transition-all duration-300 p-6 rounded-lg h-full">
                <h3 class="text-2xl md:text-3xl font-bold mb-4">{plan.name}</h3>
                <p class="text-lg md:text-xl mb-4">{plan.description}</p>
               </div>
               <Particles client:idle
                className="absolute inset-0 z-0"
                quantity={100}
                ease={80}
                color="#F2FF41"
                refresh
              />
            </div>
        ))}
         </div>
         <div class="flex justify-center mt-12 md:mt-20">
            <Button href="/Pricing">
                Explore Plans
            </Button>
         </div>
    </div>
</section>