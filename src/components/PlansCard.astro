---
import Button from "@/components/ui/Button.astro";
import { Particles } from "./shadcn/Particles";
import SplitTitle from "./SplitTitle.astro";

const plans = [
    {
        name: "Starter",
        description: "Ideal para comenzar con presencia online. Sitio básico y diseño responsivo.",
      
    },
    {
        name: "Growth",
        description: "Para negocios en crecimiento. Web dinámica, optimización SEO y branding profesional.",
  
    },
    {
        name: "Ultimate",
        description: "Desarrollo avanzado y personalizado, con estrategias SEO premium y soporte extendido.",
    
    }
    
]

---



<section class="py-20">

<div>
    <SplitTitle
    title={{
        main: "Soluciones web a ",
        highlighted: "tu medida"
    }}
    highlightedClassName="text-primary-cyan"
    />
    <p class="text-lg md:text-xl text-gray-200 mb-12">Desde sitios básicos hasta plataformas avanzadas, ofrecemos paquetes que se adaptan a tus necesidades:</p>
</div>
<div>
    <div class="flex flex-row gap-6">
    {plans.map((plan) => (
        <div class="relative">
           <div class="bg-gradient-to-br from-secondary-blue/10 to-primary-yellow/30 border border-primary-yellow/50 opacity-90 hover:opacity-100 transition-all duration-300 p-6 rounded-lg ">
            <h3 class="text-2xl md:text-3xl font-bold mb-4">{plan.name}</h3>
            <p class="text-lg md:text-xl mb-4">{plan.description}</p>
            
           </div>
           <Particles client:idle
            className="absolute inset-0 z-0"
            quantity={100}
            ease={80}
            color="#F2FF41"
            refresh
          />
        </div>
       
    ))}
     </div>
     <div class="flex justify-center mt-20">
        <Button href="/Pricing">
            Explorar Planes
        </Button>
     </div>
</div>



</section>