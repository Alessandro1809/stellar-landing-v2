---
import { Image } from "astro:assets";
import Founder1 from "@/assets/Founder_1.svg";
import Founder2 from "@/assets/Founder_2.svg";
import SplitTitle from "@/components/SplitTitle.astro";

interface Founder {
    name: string;
    role: string;
    description: string;
    longDescription: string;
    image: ImageMetadata;
    linkedin: string;
    github: string;
}

const founders: Founder[] = [
    {
        name: "Alessandro DÃ­az",
        role: "CEO & CTO",
        description: "Full Stack Software Developer with strong emphasis on platform optimization.",
        longDescription: "Passionate software developer with experience in Full Stack development, using modern technologies such as Flutter, Angular, React, and Node.js. His approach combines building robust architectures, business process automation, and innovative solutions, such as custom CRMs and artificial intelligence modules. Alessandro stands out for his ability to work in agile teams (SCRUM) and his commitment to continuous learning, actively participating in talks and projects that strengthen his technical and professional skills.",
        image: Founder1,
        linkedin: "https://www.linkedin.com",
        github: "https://github.com"
    },
    {
        name: "Leonela Sevilla",
        role: "CMO & COO",
        description: "Digital Marketing and Business Administration Specialist.",
        longDescription: "With experience in designing innovative strategies, process automation, and optimization of digital platforms to maximize results. Her approach combines creativity and data analysis, developing customized solutions such as CRMs and advanced marketing tools. She stands out for her work in agile teams under methodologies like SCRUM and her commitment to continuous learning, participating in projects and workshops that strengthen her technical and strategic skills to drive brand growth and positioning.",
        image: Founder2,
        linkedin: "https://www.linkedin.com",
        github: "https://github.com"
    }
];
---
<section class="founders-section">
    <header class="pt-32">
        <SplitTitle
            title={{
                main: "Founders of",
                highlighted: "Stellar company"
            }}
        />
    </header>
    <main class="grid grid-cols-1 md:grid-cols-2 md:gap-12 gap-20 mt-40">
        {founders.map((founder) => (
            <article class="bg-gradient-to-tr from-secondary-blue/10 to-primary-blue/20 rounded-xl border border-primary-cyan/20 p-8 relative group hover:border-primary-cyan/40 transition-all duration-300 hover:bg-primary-blue/5">
                <figure class="absolute -top-12 right-8 w-24 h-24 rounded-2xl overflow-hidden border-4 border-primary-cyan/20 shadow-xl">
                    <Image 
                        src={founder.image} 
                        alt={founder.name}
                        class="w-full h-full object-cover"
                    />
                </figure>

                <div class="mt-12">
                    <header>
                        <h3 class="text-3xl font-bold text-white mb-2">{founder.name}</h3>
                        <p class="text-primary-yellow font-semibold mb-4">{founder.role}</p>
                    </header>
                    
                    <div class="content">
                        <p class="text-gray-300 mb-4">{founder.description}</p>
                        <p class="text-gray-400 text-sm mb-6">{founder.longDescription}</p>
                    </div>

                    <footer class="flex gap-4">
                        <a 
                            href={founder.linkedin}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-gray-400 hover:text-primary-yellow transition-colors"
                            aria-label={`Visit ${founder.name}'s LinkedIn profile`}
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                            </svg>
                        </a>
                        <a 
                            href={founder.github}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-gray-400 hover:text-primary-yellow transition-colors"
                            aria-label={`Visit ${founder.name}'s GitHub profile`}
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                            </svg>
                        </a>
                    </footer>
                </div>
            </article>
        ))}
    </main>
</section>




