---
import Button from "@/components/ui/Button.astro";
import SplitTitle from "@/components/SplitTitle.astro";
import {Particles} from "@/components/shadcn/Particles";

const plans = [
    {
        name: "Starter",
        price: "$500 - $1000",
        description: "Perfect for getting started with online presence.",
        features: [
            "Basic website design (up to 5 pages) with responsive design.",
            "Basic SEO optimization (initial setup of keywords and meta tags).",
            "Basic branding: simple logo and custom color palette.",
            "Technical support for 1 month after delivery."
        ],
        buttonText: "Inquire"
    },
    {
        name: "Growth",
        price: "$1,500 - $3,000",
        description: "For growing businesses looking to expand their digital presence.",
        features: [
            "Modern and dynamic website design (up to 10 pages) with integration of tools like blogs or forms.",
            "Intermediate SEO strategy (content optimization, speed, and technical setup).",
            "Complete branding: professional logo, brand manual, and basic graphic elements.",
            "Technical support and updates for 3 months."
        ],
        buttonText: "Inquire"
    },
    {
        name: "Ultimate",
        price: "$5000 and up",
        description: "Advanced and custom development for established companies.",
        features: [
            "Custom software development or advanced website (e-commerce or custom platforms).",
            "Advanced SEO strategy: complete audit, technical optimization, content generation, and monthly monitoring.",
            "Premium branding: advanced logo design, complete visual identity, and advertising materials.",
            "Technical support and updates for 6 months."
        ],
        buttonText: "Inquire"
    }
]
---

<section class="py-20">
  
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {plans.map((plan) => (
                <div class="relative">
                    <div class="bg-gradient-to-br from-secondary-blue/10 to-primary-yellow/30 border border-primary-yellow/50 opacity-90 hover:opacity-100 transition-all duration-300 p-8 rounded-lg h-full flex flex-col">
                        <h3 class="text-2xl md:text-3xl font-bold mb-2">{plan.name}</h3>
                        <p class="text-2xl font-bold mb-4 text-primary-cyan">{plan.price}</p>
                        <p class="text-lg mb-6">{plan.description}</p>
                        
                        <ul class="space-y-4 mb-8 flex-grow">
                            {plan.features.map((feature) => (
                                <li class="flex items-start">
                                    <span class="text-primary-cyan mr-2">âœ“</span>
                                    <span class="text-sm">{feature}</span>
                                </li>
                            ))}
                        </ul>
                        
                        <div class="mt-auto">
                            <Button href="/Contact" class="w-full justify-center"
                            icon={true}
                            >
                                {plan.buttonText}
                            </Button>
                        </div>
                    </div>
                    <Particles 
                        client:idle
                        className="absolute inset-0 z-0"
                        quantity={100}
                        ease={80}
                        color="#F2FF41"
                        refresh
                    />
                </div>
            ))}
        </div>
        
        <p class="text-sm text-center mt-8 text-gray-400">
            * Price subject to specific project requirements
        </p>
    </div>
</section> 