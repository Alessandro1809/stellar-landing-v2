---
import ArrowRight from "@/components/icons/ArrowRight.astro";
interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
  class?: string;
  icon?: boolean;
}

const { 
  href, 
  variant = 'primary',
  class: className = '',
  icon = false
} = Astro.props;

const baseStyles = "px-6 py-3 font-semibold rounded-full transition-colors group flex items-center gap-2";
const variants = {
  primary: "bg-primary-yellow text-theme-deepblue hover:bg-primary-yellow/90",
  secondary: "border-2 border-primary-yellow text-white hover:bg-white/10"
};
---

<a 
  href={href}
  class:list={[
    baseStyles,
    variants[variant],
    className
  ]}
>
  <slot />
  {icon && <span class="group-hover:translate-x-1 transition-transform duration-300"><ArrowRight /></span>}
</a> 