---
import SplitTitle from '../SplitTitle.astro';
import Button from './Button.astro';

interface ButtonProps {
    text: string;
    href?: string;
    target?: string;
    variant: 'primary' | 'secondary' | 'primaryCyan' | 'secondaryCyan' | 'primaryBlue' | 'secondaryBlue';
    isMeetingButton?: boolean;
}

interface Props {
    introductoryText?: string;
    mainTitle?: string;
    highlightedTitle?: string;
    showCard?: boolean;
    titleCard?: string;
    subtitleCard?: string;
    cardDescription?: string;
    buttons?: ButtonProps[];
    href?: string;
}

const {
    introductoryText = "At our company, we specialize in custom software development, professional web design, SEO strategies, and creative branding, designed to strengthen your brand's presence and growth. Our team combines cutting-edge technology and customized strategies to help you stand out in a competitive market. Whether it's creating robust digital platforms or improving your business's visibility, we're here to take your ideas to the next level. Transform your business with our comprehensive digital solutions!",
    showCard = true,
    mainTitle = "How Stellar ",
    highlightedTitle = "can help you?",
    titleCard = "Stellar adapts to your needs",
    subtitleCard = "Do you have a specific service or job in mind?",
    cardDescription = "We design customized solutions for businesses of all sizes. Whether you need a strategic plan or a customized project, we're here to help you drive your business growth. Contact us today and find out how we can take your company to the next level.",
    buttons = [
        {
            text: "Contact us",
        href: "/Contact",
        target: "_self",
            variant: "primaryCyan"
        },
        {
            text: "Explore our plans",
        href: "/Pricing",
        target: "_self",
            variant: "secondaryBlue"
        },
        {
            text: "Schedule a call",
        href: "https://calendly.com/stellarteamcr",
        target: "_blank",
            variant: "secondaryBlue"
        }
    ]
} = Astro.props;



---

<section class="w-full pb-12 md:pb-32">
    <SplitTitle
        title={{
            main: mainTitle,
            highlighted: highlightedTitle
        }}
        highlightedClassName="text-primary-cyan"
    />
   
    <p class="text-lg md:text-xl text-gray-200 mb-12">
        {introductoryText}
    </p>
    
    {showCard && (
        <div class="bg-gradient-to-br from-secondary-blue/10 to-primary-cyan/30 p-8 rounded-xl border border-primary-cyan/20">
            <div class="space-y-4">
                <h2 class="text-3xl md:text-4xl font-bold text-white">
                    {titleCard}
                </h2>
                <h3 class="text-xl text-primary-cyan">
                    {subtitleCard}
                </h3>
                <p class="text-gray-200">
                    {cardDescription}
                </p>
                
                <div class="flex flex-wrap gap-4 mt-8">
                    {buttons.map(button => (
                        <Button variant={button.variant} href={button.href || ""} target={button.target || "_self"}>
                            {button.text}
                        </Button>
                    ))}
                </div>
            </div>
        </div>
    )}
</section>



