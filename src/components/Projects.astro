---
import { Image } from "astro:assets";
import Chepena from "@/assets/proyects/Chepena.webp";
import Zarpe from "@/assets/proyects/Zarpe.webp";
import Erling from "@/assets/proyects/erlingnails.webp";
---

<section class="w-full py-20 bg-theme-deepblue">
    <div class="container mx-auto">
        <h2 class="text-4xl md:text-5xl font-bold mb-12">
            <span class="text-white">Recent</span>
            <span class="text-primary-cyan">Projects</span>
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Project 1 -->
            <div class="group relative overflow-hidden rounded-xl bg-secondary-blue/10 border-2 border-primary-cyan/20 transition-all duration-300 hover:border-primary-cyan/50">
                <h3 class="absolute top-0 left-0 w-full p-4 text-xl text-primary-cyan font-bold z-10">
                    Chepena Restaurant
                </h3>
                <div class="aspect-video overflow-hidden flex items-center justify-center pt-8">
                    <Image 
                        src={Chepena} 
                        alt="Chepena Restaurant Project" 
                        class="w-[74%] h-auto object-cover transition-transform duration-300 group-hover:scale-105"
                    />
                </div>
                <div class="p-4 bg-primary-cyan">
                    <div class="flex flex-wrap gap-2">
                        <span class="px-3 py-1 text-sm rounded-full border-2 border-secondary-blue text-secondary-blue">Website</span>
                        <span class="px-3 py-1 text-sm rounded-full border-2 border-secondary-blue text-secondary-blue">Frontend</span>
                        <span class="px-3 py-1 text-sm rounded-full border-2 border-secondary-blue text-secondary-blue">Branding</span>
                    </div>
                </div>
            
            </div>

            <!-- Project 2 -->
            <div class="group relative overflow-hidden rounded-xl bg-secondary-blue/10 border-2 border-primary-cyan/20 transition-all duration-300 hover:border-primary-cyan/50">
                <h3 class="absolute top-0 left-0 w-full p-4 text-xl text-primary-cyan font-bold z-10">
                    Zarpe Landing Page
                </h3>
                <div class="aspect-video overflow-hidden flex items-center justify-center pt-8">
                    <Image 
                        src={Zarpe} 
                        alt="Zarpe Landing Page Project" 
                        class="w-[80%] h-auto object-cover transition-transform duration-300 group-hover:scale-105"
                    />
                </div>
                <div class="p-4 bg-primary-cyan">
                    <div class="flex flex-wrap gap-2">
                        <span class="px-3 py-1 text-sm rounded-full border-2 border-secondary-blue text-secondary-blue">Landing Page</span>
                        <span class="px-3 py-1 text-sm rounded-full border-2 border-secondary-blue text-secondary-blue">UI/UX</span>
                        <span class="px-3 py-1 text-sm rounded-full border-2 border-secondary-blue text-secondary-blue">Design</span>
                    </div>
                </div>
            </div>

            <!-- Project 3 -->
            <div class="group relative overflow-hidden rounded-xl bg-secondary-blue/10 border-2 border-primary-cyan/20 transition-all duration-300 hover:border-primary-cyan/50">
                <h3 class="absolute top-0 left-0 w-full p-4 text-xl text-primary-cyan font-bold z-10">
                    Erling Nails
                </h3>
                <div class="aspect-video overflow-hidden flex items-center justify-center pt-8">
                    <Image 
                        src={Erling} 
                        alt="Erling Nails Project" 
                        class="w-[70%] h-auto object-cover transition-transform duration-300 group-hover:scale-105"
                    />
                </div>
                <div class="p-4 bg-primary-cyan">
                    <div class="flex flex-wrap gap-2">
                        <span class="px-3 py-1 text-sm rounded-full border-2 border-secondary-blue text-secondary-blue">Landing Page</span>
                        <span class="px-3 py-1 text-sm rounded-full border-2 border-secondary-blue text-secondary-blue">Web Design</span>
                        <span class="px-3 py-1 text-sm rounded-full border-2 border-secondary-blue text-secondary-blue">Development</span>
                    </div>
                </div>
            </div>

            <!-- Coming Soon -->
            <div class="group relative overflow-hidden rounded-xl bg-secondary-blue/10 border-2 border-primary-cyan/20 transition-all duration-300 hover:border-primary-cyan/50">
                <h3 class="absolute top-0 left-0 w-full p-4 text-xl text-primary-cyan font-bold z-10">
                    Next Project
                </h3>
                <div class="aspect-video flex items-center justify-center bg-gradient-to-br from-secondary-blue/40 to-primary-cyan/20 p-8 pt-16">
                    <div class="text-center">
                        <div class="text-primary-cyan text-4xl font-bold mb-4">Coming Soon</div>
                        <div class="text-white/80 text-lg">Exciting new project in development</div>
                        <div class="mt-4 flex justify-center gap-2">
                            <span class="animate-pulse inline-block w-2 h-2 rounded-full bg-primary-cyan"></span>
                            <span class="animate-pulse inline-block w-2 h-2 rounded-full bg-primary-cyan delay-100"></span>
                            <span class="animate-pulse inline-block w-2 h-2 rounded-full bg-primary-cyan delay-200"></span>
                        </div>
                    </div>
                </div>
                <div class="p-4 bg-primary-cyan">
                    <div class="flex flex-wrap gap-2">
                        <span class="px-3 py-1 text-sm rounded-full border-2 border-secondary-blue text-secondary-blue">Innovation</span>
                        <span class="px-3 py-1 text-sm rounded-full border-2 border-secondary-blue text-secondary-blue">Technology</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-12">
            <h3 class="text-xl md:text-2xl font-bold mb-12">
                Want to see more of our projects?
            </h3>
            <a 
                href="/portfolio" 
                class="inline-block px-6 py-3 text-lg font-medium text-secondary-blue bg-primary-cyan rounded-full hover:opacity-90 transition-opacity"
            >
                View Portfolio
            </a>
        </div>
    </div>
</section> 