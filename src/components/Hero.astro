---
import { Image } from "astro:assets";
import HeroLogo from "../assets/HeroLogo.svg";
import Button from "./ui/Button.astro";
---

<div class="relative w-full h-full mt-20 md:mt-0">
  <div class="grid-container">
    <!-- Columna de texto -->
    <div class="content-area">
      <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
        Leading you to success with your own light!
      </h1>
      <p class="text-lg md:text-xl text-gray-200 mb-8">
        Ready to take your business to the next level? We have modern and high quality solutions in consulting, marketing, web development and more
      </p>
      <div class="flex gap-4 flex-wrap">
        <Button 
          href="#contact" 
          variant="primary"
        >
          Habla con   nosotros
        </Button>
        <Button 
          href="#services" 
          variant="secondary"
        >
          Explora nuestros planes
        </Button>
      </div>
    </div>

    <!-- Columna del logo -->
    <div class="logo-area z-10">
      <div class="animated-gradient">
        <Image 
          src={HeroLogo} 
          alt="Stellar Logo" 
          class="w-full max-w-md relative z-10"
          width={500}
          height={500}
        />
      </div>
    </div>
  </div>

 
</div>

<style>
  .grid-container {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 2rem;
    height: 100vh;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .content-area {
    grid-column: 1 / 7;
    align-self: center;
  }

  .logo-area {
    grid-column: 7 / 12;
    align-self: center;
    justify-self: end;
  }

  .animated-gradient {
    position: relative;
    isolation: isolate;
  }

  .animated-gradient::before {
    content: '';
    position: absolute;
    inset: -20%;
    background: linear-gradient(
      25deg,
      #244fa54b,
      #0b1a3e46,
      #244fa559,
      #0b1a3e9d
    );
    
    background-size: 400% 400%;
    animation: gradient 7s ease infinite;
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    filter: blur(24px);
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
      border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    }
    50% {
      background-position: 70% 50%;
      border-radius: 70% 30% 30% 70% / 70% 70% 30% 30%;
    }
    100% {
      background-position: 0% 50%;
      border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    }
  }

  @media (max-width: 768px) {
    .grid-container {
      grid-template-columns: 1fr;
      grid-template-rows: auto auto;
      gap: 2rem;
      padding: 1rem;
      height: auto;
      min-height: 100vh;
    }

    .content-area {
      grid-column: 1 / -1;
      text-align: center;
    }

    .logo-area {
      grid-column: 1 / -1;
      display: block;
      justify-self: center;
      max-width: 300px;
      margin: 0 auto;
    }

    .flex {
      justify-content: center;
    }
  }
</style>



