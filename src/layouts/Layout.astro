---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { AnimatedGridPattern } from '../components/shadcn/AnimatedGridPattern';
import "@/styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Stellar consultants</title>
	</head>
	<body class="bg-theme-deepblue relative">
		<div class="absolute inset-0 mask-radial-gradient h-screen">
			<AnimatedGridPattern
				numSquares={90}
				maxOpacity={0.1}
				duration={2}
				repeatDelay={1}
				client:load
			/>
		</div>
		<Header />
		<main class="container mx-auto max-w-14xl text-theme-white">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		color-scheme: dark;
	}

	.mask-radial-gradient {
		background-color: #2450A5;
		background-image: linear-gradient(to bottom, #0B1A3E 100%, #2450A5 100%);
		mask-image: linear-gradient(to bottom, white 1%, transparent 100%);
		-webkit-mask-image: linear-gradient(to bottom, white 2%, transparent 100%);
	}
</style>
